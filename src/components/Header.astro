const isBrowser = typeof window !== 'undefined';
---

<header id="main-header" class="fixed z-50 top-5 left-1/2 -translate-x-1/2 flex justify-center items-center py-3 px-6 rounded-full transition-all duration-300">
    <nav class="flex flex-row gap-x-6 opacity-80">
        <a href="#top" class="transition hover:text-blue-500">Inici</a>
        <a href="#sobre-mi" class="transition hover:text-blue-500">Sobre mi</a>
        <a href="#projectes" class="transition hover:text-blue-500">Projectes</a>
        <a href="#experiencia" class="transition hover:text-blue-500">Experiencia</a>
        <a href="mailto:ismaelbenitezmartinez@gmail.com" class="transition hover:text-blue-500">Contacte</a>
    </nav>
</header>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('main-header');
    
    const handleScroll = () => {
        if (window.scrollY > 50) {
            header.classList.add('bg-gray-900', 'border', 'border-white/10', 'shadow-lg');
            header.classList.remove('opacity-95');
        } else {
            header.classList.remove('bg-gray-900', 'border', 'border-white/10', 'shadow-lg');
            header.classList.add('opacity-95');
        }
    };

    handleScroll();
    window.addEventListener('scroll', handleScroll);
});
</script>