---
import HTMLIcon from "../icons/HTML.astro";
import FigmaIcon from "../icons/Figma.astro";
import SCSSIcon from "../icons/SCSS.astro";
import LaravelIcon from "../icons/Laravel.astro";
import VueIcon from "../icons/Vue.astro";
import JavaScriptIcon from "../icons/JavaScript.astro";
import PHPIcon from "../icons/PHP.astro";
import CSSIcon from "../icons/CSS.astro";
import MySQLIcon from "../icons/MySQL.astro";
import GitLabIcon from "../icons/GitLab.astro";

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-orange-500/10 border border-orange-500 text-orange-500",
        icon: HTMLIcon,
    },
    Figma: {
        name: "Figma",
        class: "bg-purple-500/10 border border-purple-500 text-purple-500",
        icon: FigmaIcon,
    },
    SCSS: {
        name: "SCSS",
        class: "bg-pink-500/10 border border-pink-500 text-pink-500",
        icon: SCSSIcon,
    },
    Laravel: {
        name: "Laravel",
        class: "bg-red-600/10 border border-red-600 text-red-600",
        icon: LaravelIcon,
    },
    Vue: {
        name: "Vue",
        class: "bg-green-500/10 border border-green-500 text-green-500",
        icon: VueIcon,
    },
    JavaScript: {
        name: "JavaScript",
        class: "bg-yellow-400/10 border border-yellow-400 text-yellow-400",
        icon: JavaScriptIcon,
    },
    PHP: {
        name: "PHP",
        class: "bg-indigo-600/10 border border-indigo-600 text-indigo-600",
        icon: PHPIcon,
    },
    CSS: {
        name: "CSS",
        class: "bg-blue-500/10 border border-blue-500 text-blue-500",
        icon: CSSIcon, 
    },
    MySQL: {
        name: "MySQL",
        class: "bg-cyan-600/10 border border-cyan-600 text-cyan-600",
        icon: MySQLIcon,
    }
}

const PROJECTS = [
    {
        title: "Club Stas Tarat",
        description:
            "Projecte d'una web per una associació cultural que ofereix un sistema complet per gestionar la ludoteca, reserves de jocs i sales, i el registre de clients, amb una interfície accessible per a totes les edats.",
        link: "https://gitlab.com/copernic-projects/stastarat",
        image: "/projects/stastarat.webp",
        tags: [
            TAGS.HTML,
            TAGS.Figma,
            TAGS.SCSS,
            TAGS.Laravel,
            TAGS.Vue,
            TAGS.JavaScript,
            TAGS.PHP,
            TAGS.MySQL,
        ],
    },
    {
        title: "Rooming - Gestor d'hotels",
        description:
            "Projecte d'un gestor d'hotels backoffice amb Laravel i webs d'hotels dissenyades amb mobile-first amb Vue. El gestor proporciona einas per gestionar cada hotel amb un calendari de reserves i en la part web es poden crear reserves en les dates disponibles",
        link: "https://gitlab.com/ibenitez1/grup03-hotels",
        image: "/projects/rooming.webp",
        tags: [
            TAGS.HTML,
            TAGS.Figma,
            TAGS.SCSS,
            TAGS.Laravel,
            TAGS.Vue,
            TAGS.JavaScript,
            TAGS.PHP,
            TAGS.MySQL,
        ],
    },
    {
        title: "Subasterra - Casa de subhastes",
        description:
            "Projecte d'una casa de shubastes que ofereix una plataforma en línia per gestionar subhastes físiques en petit format. Facilita la interacció entre compradors i venedors.",
        link: "https://gitlab.com/ortiz.leal.roger/subasterra/",
        image: "/projects/subasterra.webp",
        tags: [
            TAGS.HTML,
            TAGS.CSS,
            TAGS.JavaScript,
            TAGS.PHP,
            TAGS.MySQL,
        ]
    }
];
---

{
    PROJECTS.map(({ title, description, tags, image, link }) => (
        <article class="flex flex-col md:flex-row gap-8 items-start mb-12">
            {/* Imagen a la izquierda */}
            <a 
                href={link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="w-full md:w-1/2 hover:scale-[1.02] transition-transform"
            >
                <img
                    class="rounded-xl border-1 border-neutral-300 lg:border lg:border-gray-800 lg:hover:border-gray-700 object-cover w-full h-full"
                    src={image}
                    alt={`Captura de pantalla del proyecto ${title}`}
                />
            </a>

            {/* Contenido a la derecha */}
            <div class="w-full md:w-1/2 flex flex-col gap-2">
                {/* Título */}
                <h3 class="text-2xl font-semibold text-white mb-4">{title}</h3>
                
                {/* Tags */}
                <ul class="flex flex-wrap gap-2 mb-4">
                    {tags.map((tag) => (
                        <li>
                            <span class={`flex items-center gap-x-2 px-2 py-1 rounded-full text-xs font-medium ${tag.class}`}>
                                {tag.icon && <tag.icon class="w-5 h-5" />}
                                {tag.name}
                            </span>
                        </li>
                    ))}
                </ul>

                {/* Descripción */}
                <p class="text-lg text-pretty text-gray-300">{description}</p>

                <div class="mt-auto flex justify-end">
                    <a
                        href={link}
                        class="
                        inline-flex items-center justify-center
                        gap-2
                        rounded-full
                        bg-gradient-to-r from-white/10 to-white/5
                        backdrop-blur-sm
                        py-2 px-4
                        md:py-3 md:px-6
                        text-sm md:text-base
                        font-medium
                        text-white
                        shadow-sm
                        transition
                        duration-200
                        ease-out
                        hover:shadow-md hover:scale-105
                        focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white/50
                        active:scale-100 active:opacity-90
                        w-auto
                        "
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label={`Més informació sobre ${title}`}
                    >
                        <GitLabIcon class="w-5 h-5 md:w-6 md:h-6" />
                        <span>Més informació</span>
                    </a>
                </div>
            </div>
        </article>
    ))
}